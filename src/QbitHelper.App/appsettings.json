{
    "Serilog": {
        "Using": ["Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [{ "Name": "Console" }],
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    },
    "Settings": {
        "DryRun": false,
        "EmptyOrphanedDirectoryAfterDays": 30,
        "QbittorrentConfig": {
            "Host": "https://qbittorrent:8080/",
            "DownloadPath": "/torrent/"
        },
        "JobConfig": {
            "Orphan": {
                "Enabled": false,
                "OrphanPath": "/torrent/orphaned_data/",
                "EmptyOrphanedDirectoryAfterDays": 30,
                "IntervalMinutes": 30,
                "ExcludeActiveTorrentRootFolders": false,
                "ExcludePatterns": ["**/*_unpackerred"]
            },
            "LimitPublicTorrentSpeed": {
                "Enabled": true,
                "IntervalSeconds": 15,
                "MaximumDownloadSpeed": -1,
                "MaximumUploadSpeed": 512000
            },
            "StalledArr": {
                "Enabled": false,
                "IntervalMinutes": 30,
                "MinimumTorrentAgeMinutes": 1440
            },
            "TagTorrentPrivacy": {
                "Enabled": true,
                "PrivateTag": "private",
                "PublicTag": "public",
                "IntervalSeconds": 5
            },
            "ReannounceRacingTorrent": {
                "Enabled": true,
                "IntervalSeconds": 5
            },
            "TagIssueTorrent": {
                "Enabled": true,
                "IssueTag": "issue",
                "IntervalSeconds": 5
            },
            "EnsureQbitPreferences": {
                "Enabled": true,
                "IntervalSeconds": 30
            }
        },
        "PathMappings": [
            {
                "LocalPath": "/mnt/torrent/",
                "RemotePath": "/torrent/"
            }
        ],
        "TorrentCategoryArrConfigs": {
            "tv-sonarr": {
                "Name": "Sonarr TV",
                "Host": "http://sonarr.localhost",
                "ApiKey": "key"
            },
            "radarr": {
                "Name": "Radarr",
                "Host": "http://radarr.localhost",
                "ApiKey": "key"
            }
        }
    }
}
